<!DOCTYPE idea-plugin PUBLIC "Plugin/DTD" "http://plugins.jetbrains.com/plugin.dtd">
<idea-plugin url="https://github.com/YiiGuxing/material-design-color-palette">
    <id>cn.yiiguxing.plugin.md.palette</id>
    <name>Material Design Color Palette</name>
    <version>1.0</version>
    <vendor email="yii.guxing@gmail.com" url="https://github.com/YiiGuxing">Yii.Guxing</vendor>

    <description><![CDATA[
    <p>Plugin for Material Design color palette.</p>
    <br/>
    <p><img src="https://raw.githubusercontent.com/YiiGuxing/material-design-color-palette/master/images/screenshots-palette.png" alt="screenshots-palette.png"/></p>
    ]]></description>

    <change-notes><![CDATA[
    ]]></change-notes>

    <!-- http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html -->
    <idea-version since-build="171"/>
    <depends>com.intellij.modules.lang</depends>

    <actions>
        <action class="cn.yiiguxing.plugin.md.palette.ShowMaterialPaletteDialogAction"
                id="$ShowMaterialPaletteDialogAction"
                text="Show Material Palette Dialog">
            <add-to-group group-id="MainToolBar" anchor="last"/>
        </action>
    </actions>

</idea-plugin>